<p id="notice"><%= notice %></p>
<h2><p class="topicSubject"><%= @topic.subject %></p></h2>


<table>
  <thead>
    <tr>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="notes_tbody">
    <%= render @notes %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="question_tbody">
    <%= render @questions %>
  </tbody>
</table>


<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Definition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="keyword_tbody">
     <%= render @keywords %>
  </tbody>
</table>

<%= link_to 'New Keyword', new_keyword_path, remote: true %>
<%= link_to 'New Note', new_note_path, remote: true %>
<%= link_to 'New Question', new_question_path, remote: true %>


<div id="new_keyword_form"></div>
<div id="new_note_form"></div>
<div class="new_question_form"></div>





<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
